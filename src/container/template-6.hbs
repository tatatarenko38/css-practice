<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>


<main class="main">
 {{#with info}}
 <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_description">{{description}}</p>
 </div>
 {{/with}}

    {{#with form}}
    <form class="form">
        
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}"
                class="form_input">
            {{/each}}
        </div>

        <div class="form_checkbox">
           
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
             <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>


    </form>
    {{/with}}
</main>
   {{#with updates}}
    <div class="updates">
        <strong class="updates_title">{{title}}</strong>
        {{#each list}}
        <div class="updates_list">
            <strong class="updates_list_nickname">{{nickname}}</strong>
            <p class="updates_list_description">{{description}}</p>
           
        </div>
        {{/each}}
        {{#with show_all}}
        <a href="{{url}}" class="updates_link">{{text}}</a>
        {{/with}}
    </div>
    {{/with}}

<div class="expirience">
    {{#with expirience}}
    <div class="expirience1">
        <h2 class=" expirience_title">{{title}}</h2>
        <div>
        <badge class=" expirience_badge">{{badge}}</badge>
        </div>
    </div>
    {{#each list}}
    <div class=" expirience_list">
        <strong class="expirience_list_name">{{name}}</strong>
        <p class="expirience_list_details">{{details}}</p>
    </div>

    {{/each}}

    {{/with}}

</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copytight">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical="true"}}
    </div>
    {{/each}}
</footer>