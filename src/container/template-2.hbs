<div class="page">
    <div class="page_content">
        <div class="page_block">
            <header class="header">
                <div class="">
                    {{> logo}}
                </div>
                <nav class="header_nav">
                    <div class="header_nav_right">
                        {{> nav list=header}}
                    </div>
                </nav>

            </header>

        </div>
        <div class="page_block">
            <div class="hero">
                {{#with hero}}
                {{> hero title=title text=text}}
                <a class="button" href="{{button.url}}">{{button.text}}</a>
                {{/with}}
            </div>
        </div>
        <div class="page_block">
            <div class="flex_container">
                {{#each preview}}
                <div class="flex-item">
                    {{> cardPreview data=this}}
                </div>
                {{/each}}
            </div>

        </div>
        <div class="page_block">
            <main class="main">
                <div >
                    <div >
                        <div class="list_header">
                           
                                <div class="">
                                    <h2 class="list_title">List of posts</h2>
                                </div>
                                <div class="">
                                    <div class="category_list">
                                        {{#each categories}}
                                        <button class="category_button">{{text}}</button>
                                        {{/each}}
                                    </div>

                                </div>
                           
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="list">
                            {{#each news}}
                            {{> cardPost data=this}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-5">
                        <aside class="list_aside">
                            <div class="about">
                                <h4 class="about_title">About</h4>
                                <p class="about_text">{{about}}</p>
                            </div>
                            {{> linkList data=archive title="Archives"}}

                             {{> linkList data=social title="Social"}}
                        </aside>
                    </div>
                </div>

            </main>
        </div>
        <div class="page_block">

            <footer class="footer">
                <div >
                    {{> logo}}
                    <span class="footer_copytight">Copyright 2023-2024</span>
                </div>
                {{#each footer}}
                <div >
                    <span class="footer_title">{{title}}</span>
                    {{> nav list=links isVertical="true"}}
                </div>
                {{/each}}
            </footer>
        </div>

    </div>
</div>